{
  "package": {
    "devDependencies": {
      "@types/node": "^12.0.0",
      "@types/react": "^17.0.0",
      "@types/react-dom": "^17.0.0",
      "@types/jest": "^26.0.15",
      "lint-staged": "^10.0.7",
      "prettier": "^2.2.0",
      "typescript": "^4.1.2",
      "web-vitals": "^1.0.1"
    },
    "scripts": {
      "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'"
    },
    "eslintConfig": {
      "extends": ["@wanglihua/react-app"]
    },
    "gitHooks": {
      "pre-commit": "lint-staged"
    },
    "lint-staged": {
      "*.{js,jsx,less,md,json}": ["prettier --write"],
      "*.ts?(x)": ["prettier --parser=typescript --write"]
    }
  }
}
